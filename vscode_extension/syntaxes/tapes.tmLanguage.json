{
  "scopeName": "source.tapes",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings"  },
    { "include": "#keywords" },
    { "include": "#types"    },
    { "include": "#constructors" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tapes",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tapes",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tapes",
          "match": "\\b(?:set|let|check|draw|to|if|then|else|while|do|BEGIN_IMP|END_IMP|true|false|forall|exists|and|or|not|with|invariant|axioms|check_triple|draw_circuit|draw_matrix|draw_normal_form|draw_trace_normal_form|BEGIN_TEST|END_TEST|BEGIN_IMP|END_IMP|invert|to_fol|draw_cospan)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.tapes",
          "match": "\\b(?:tape|term|sort|to_tape|normalize_term|normalize|of_relation)\\b"
        }
      ]
    },
    "constructors": {
      "patterns": [
        {
          "name": "support.function.constructor.tapes",
          "match": "\\b(?:id|s\\+|s\\*|dl|gen|copy|cocopy|discard|codiscard|split|join|cut|spawn)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tapes",
          "match": "\\.|;|:|=|\\+|and|or|not|implies|star|op"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.tapes",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
} 
